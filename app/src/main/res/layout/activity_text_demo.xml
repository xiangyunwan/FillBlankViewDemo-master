<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="match: Android"/>

    <com.repo.xw.fillblankviewdemo.FillBlankView
        android:id="@+id/fill_blank_view1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp"
        android:textSize="16sp"
        app:blankNum="7"/>

    <TextView
        android:id="@+id/matched_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="match: Hello, world"/>

    <com.repo.xw.fillblankviewdemo.FillBlankView
        android:id="@+id/fill_blank_view2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp"
        android:textSize="16sp"
        app:blankCornerRadius="4dp"
        app:blankSpace="5dp"/>

    <TextView
        android:id="@+id/matched_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="match: 13800000000"/>

    <com.repo.xw.fillblankviewdemo.FillBlankView
        android:id="@+id/fill_blank_view3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp"
        android:textSize="16sp"
        app:blankCornerRadius="4dp"
        app:blankSolidColor="@color/gray_light"
        app:blankSpace="10dp"
        app:blankStrokeColor="@color/gray_light"
        app:hideText="true"
        app:textMatchedColor="@color/green"
        app:textNotMatchedColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/matched_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:text="match: FillBlank"/>

    <com.repo.xw.fillblankviewdemo.FillBlankView
        android:id="@+id/fill_blank_view4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:padding="5dp"
        android:textColor="@color/blue"
        android:textSize="16sp"
        app:blankCornerRadius="4dp"
        app:blankSpace="5dp"
        app:blankStrokeColor="@color/blue"
        app:blankStrokeWidth="1dp"/>

    <TextView
        android:id="@+id/matched_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"/>
</LinearLayout>
